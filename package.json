{
	"name": "binary-plist",
	"displayName": "Binary Plist",
	"version": "1.0.3",
	"description": "Binary property list editor to view and edit binary plist files as XML.",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"binary",
		"plist",
		"xml"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/dnicolson/binary-plist"
	},
	"license": "MIT",
	"author": {
		"name": "David Nicolson"
	},
	"publisher": "dnicolson",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"package": "vsce package",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"commands": [
			{
				"command": "binaryPlistEditor.openWithDefaultEditor",
				"title": "Open with Default Editor",
				"category": "Binary Plist"
			}
		],
		"configuration": {
			"title": "Binary Plist",
			"properties": {
				"binaryPlist.engine": {
					"type": "string",
					"default": "libplist",
					"enum": [
						"libplist",
						"plutil",
						"python",
						"node"
					],
					"enumDescriptions": [
						"Use libplist",
						"Use plutil command (macOS only)",
						"Use Python plistlib module",
						"Use Node.js bplist-parser and bplist-creator libraries"
					],
					"description": "Specify which engine to use for plist conversion"
				}
			}
		},
		"customEditors": [
			{
				"viewType": "binaryPlistEditor.edit",
				"displayName": "Binary Plist Editor",
				"selector": [
					{
						"filenamePattern": "*.plist"
					}
				],
				"priority": "default"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "binaryPlistEditor.openWithDefaultEditor",
					"when": "activeCustomEditorId == binaryPlistEditor.edit",
					"group": "navigation"
				}
			]
		}
	},
	"activationEvents": [
		"onLanguage:xml"
	],
	"dependencies": {
		"bplist-creator": "^0.1.1",
		"bplist-parser": "^0.3.2",
		"command-exists": "^1.2.9",
		"libplist": "^1.0.0",
		"plist": "github:TooTallNate/plist.js#pull/144/head",
		"tmp": "^0.2.4"
	},
	"devDependencies": {
		"@types/command-exists": "^1.2.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.0.16",
		"@types/plist": "^3.0.5",
		"@types/tmp": "^0.2.3",
		"@types/vscode": "^1.67.2",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"@vscode/test-electron": "^2.4.0",
		"eslint": "^8.7.0",
		"glob": "^7.2.0",
		"mocha": "^11.7.3",
		"sort-package-json": "^1.54.0",
		"typescript": "^4.5.5"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"icon": "icon.png"
}
